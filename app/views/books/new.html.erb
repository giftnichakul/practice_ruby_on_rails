<h1>Create new book ðŸ“–</h1>

<%= form_with model: @book, local: true do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </div>
  <div>
    <%= form.label :release %><br>
    <%= form.date_select :release %>
  </div>

  <br>
  <div>
    <%= form.submit %>
  </div>

  <br>
  <% if params[:error] %>
    <div> Got error </div>
    <ul>
      <% params[:error].each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>
<% end %>

<p> <a href= "<%= books_path %>">Go Back</a></p>
