<h1>Edit comment of <%= @book.name%> 📝</h1>

<%= form_with model: [@book, @review] do |form| %>
  <div>
    <%= form.label :comment %><br>
    <%= form.text_area :comment %>
  </div>

  <div>
    <%= form.label :star %><br>
    <%= form.number_field :star, step: :any %>
  </div>

  <br>
  <div>
    <%= form.submit%>
  </div>
<%end%>

<p><a href= "<%= book_path(@book) %>">Go Back</a></p>

